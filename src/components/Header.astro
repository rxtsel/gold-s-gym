---
import { BiPhone } from 'react-icons/bi/index'
import { ToggleMenu } from './ToggleMenu'
---

<header>
  <ToggleMenu client:load />

  <a class="logo" href="#">Golds's<span>Gym</span>.</a>

  <a href="tel:1234546"><BiPhone /></a>

  <nav>
    <a href="#">Nostros</a>
    <a href="#">Precios</a>
    <a href="#">Testimonios</a>
  </nav>

</header>

<style>
  header {
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
    position: relative;
  } 

  nav {
    position: absolute;
    top: 5.72rem;
    right: 0;
    left: 0;
    width: 100%;
    height: calc(100vh - 5.72rem);
    padding: 2rem;
    display: flex;
    gap: 2rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: var(--black);
    transform: translateY(-120%);
    transition: transform 0.5s ease-in-out;
    z-index: -1;
  }

  nav a {
    transition: color 0.5s ease-in-out;
  }

  nav a:hover {
    color: var(--orange);
  }

  :has(button.active) nav {
    transform: translateY(0);
  }))

  button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 3rem;
    color: var(--grey);
  }

  a {
    color: var(--grey);
    font-size: 3rem;
  }

  .logo {
    font-size: 2.4rem;
    font-family: var(--primary-font);
    color: var(--orange);
  }

  span {
    color: var(--white);
    font-weight: var(--regular);
  }

</style>
